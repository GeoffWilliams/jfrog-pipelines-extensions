clean:
	rm -f steps/declarativesystems/*/onExecute.sh

test:
	echo "=== bash syntax ==="
	bash -n lib/common.sh
	find . -iname '*.sh' -print0 | xargs -0L1 bash -n

	echo "=== yaml syntax ==="
	./res/validate_yaml.py